{
  "version": 2,
  "name": "quiltro",

  "builds": [
    { 
      "src": "package.json",
      "use": "@now/static-build" 
    },
    { 
      "src": "./lambdas/**/*.ts",
      "use": "@now/node"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)",
      "dest": "/lambdas/$1" 
    },
    { 
      "src": "/lambdas/(.*)",
      "dest": "/" 
    },
    { 
      "src": "/lambdas",
      "dest": "/"
    }
  ],
  "env": {
    "S3_PROD_ACCESS_KEY_ID": "@s3-prod-access-key-id",
    "S3_PROD_SECRET_ACCESS_KEY": "@s3-prod-secret-access-key",
    "S3_STAGE_ACCESS_KEY_ID": "@s3-stage-access-key-id",
    "S3_STAGE_SECRET_ACCESS_KEY": "@s3-stage-secret-access-key"
  }
}
