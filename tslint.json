{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": ["migrations/*", "*.js", "*.d.ts", "dist/*", ".next/*"]
  },
  "rules": {
    "interface-name": false,
    "no-namespace": false,
    "jsx-boolean-value": false,
    "member-access": [true, "no-public"],
    "no-empty-interface": false,
    "no-console": false,
    "quotemark": [true, "single", "jsx-double"],
    "jsx-no-lambda": false
  }
}
